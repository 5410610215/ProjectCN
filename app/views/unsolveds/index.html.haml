    %body#page6
      / START PAGE SOURCE
      .wrap
        %header
          .container
            %h1
              %a{:href => "/"} PROBLEMPEDIA
            %nav
              %ul
                %li
                  %a.m1{:href => "/"} Home Page
                %li.current
