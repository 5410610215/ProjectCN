-if session[:role] >= 1
  %html{:lang => "en"}
    %head
      %title PROBLEMPEDIA | About Us
      %meta{:charset => "utf-8"}
      %link{:href => "assets/reset.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
        %link{:href => "assets/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
          %script{:src => "assets/jquery-1.4.2.min.js", :type => "text/javascript"}
          %script{:src => "assets/cufon-yui.js", :type => "text/javascript"}
          %script{:src => "assets/cufon-replace.js", :type => "text/javascript"}
          %script{:src => "assets/Myriad_Pro_300.font.js", :type => "text/javascript"}
          %script{:src => "assets/Myriad_Pro_400.font.js", :type => "text/javascript"}
          %script{:src => "assets/script.js", :type => "text/javascript"}
            :css
              color:red;
    %body#page6
      / START PAGE SOURCE
      .wrap
        %header
          .container
            %h1
              %a{:href => "/"} PROBLEMPEDIA
            %nav
              %ul
                %li
                  %a.m1{:href => "/"} Home Page
                %li.current
                  %a.m2{:href => "/unsolveds"} UNSOLVED PROBLEM
                %li
                  %a.m3{:href => "/solveds"} SOLVED PROBLEM
                %li
                  %a.m4{:href => "/rules"} RULES
                %li.last
                  %a.m5{:href => "/abouts"} ABOUT US

            %form#search-form{:action => "#"}
              %fieldset
                .rowElem
                  - if session[:role] >= 1
                    - @user = session[:user]
                    %table{:border => "0"}
                      %tr
                        %td{:style => "text-align:right;"}
                          %h4 Welcome #{@user.username}
                      %tr
                        %td{:style => "text-align:right;"}
                          %a{:href => "/logout" } Logout

        .container
          %aside
            %h3 Categories
            %ul.categories
              %li
                %span
                  %a{:href => "/unsolveds"} Unsolved Problem
              %li
                %span
                  %a{:href => "/solveds"} Solved Problem
              %li
                %span
                  %a{:href => "/rules"} Rules
              %li
                %span
                  %a{:href => "/abouts"} More About Us
            
          %section#content
            %wbr
            
            %center
              %table
                %tr
                  -if session[:role] == 2
                    %td
                      %h3{:style => "font-size:15px;font-weight:bold;",:class => "delete-button"}
                        = link_to 'Delete this problem?', @unsolved, :method => :delete, :class => "round-border", :data => { :confirm => 'Are you sure to delete this problem?' }
                    
                  %td
                    %h3{:class => "back-problem",:style => "font-size:15px;font-weight:bold;"}= link_to 'Back', unsolveds_path



              %p{:style => "color:#00CC00;font-size:25px;"}
                = notice



            %table{:style => "background-color: ; width: 100%"}
              %tr
                %td{:style => "color:#000000; width: 20%"}
                  %h3
                    Priority
                %td{:style => "font-size:17px;height:30px; width: 5%;color:#000000"} :
                %td{:style => "font-size:17px;height:30px;color:000000"}
                  - if @unsolved.priority == 1 
                    %h3
                      = "LOW"
                  - else
                    %h3
                      = "HIGH"
              %tr
                %td{:style => "color:#000000"}
                  %h3
                    Topic
                %td{:style => "font-size:17px;height:30px;color:#000000"} :
                %td{:class => "table-border",:colspan => "2", :width => "520px",:style => "font-size:17px;color:#000000;height:40px;text-align:left;width: 546px;word-wrap: break-word;display:block;overflow-y:scroll;color:000000"}
                  = @unsolved.topic
              %tr
                %td{:style => "color:#000000"}
                  %h3
                    Department
                %td{:style => "font-size:17px;height:30px;color:#000000"} :
                %td{:style => "font-size:17px;height:30px;color:#000000"}
                  = @unsolved.department
              %tr
                %td{:style => "color:#000000"}
                  %h3
                    Details
                %td{:style => "font-size:17px;height:30px;color:#000000"} :
                %td{:class => "table-border",:colspan => "2", :width => "520px",:style => "font-size:17px;color:#000000;height:100px;text-align:left;width: 546px;word-wrap: break-word;display:block;overflow-y:scroll;color:000000"}
                  = @unsolved.details
              %tr
                %td{:style => "color:#000000"}
                  %h3
                    Status
                %td{:style => "font-size:17px;height:30px;color:#000000"} :
                - if @unsolved.status == 0
                  %td{:style => "font-size:17px;height:30px;color:#F00;"}
                    %h3
                      = "UNSOLVED"
                - else
                  %td{:style => "font-size:17px;height:30px;color:#0C0;"}
                    %h3
                      = "SOLVED"   
                  
            - if @unsolved.status == 0
                    
              %center
                -if session[:role] >= 1
                  %h3
                    %a{:class => "add-button",:href => "new_solution/" + @unsolved.id.to_s} Add Solution to this problem
              %wbr

              %center
                - @solutions = Solution.all
                - @solutions.each do |solution|
                  - if solution.topic_id == @unsolved.id
                    - if solution.worked == 1
  
                      %table{:class => "table-border",:border => "1", :style => "border-collapse: collapse;height:70px;width:550px;table-layout:fixed"}
                        %tr
                          %td
                            %table{:border => "0"}
                              %tr
                                %th{:width => "208px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;"} Solution
                                -if session[:role] == 2
                                  %th{:width => "208px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;display:block;border:1px solid;padding:8px;"}= link_to 'Destroy', solution, :method => :delete, :data => { :confirm => 'Are you sure to delete this solution?' }
                              %tr
                                %td{:class => "table-border",:colspan => "2", :width => "550px",:style => "font-size:17px;color:#000000;height:150px;text-align:left;width: 546px;word-wrap: break-word;display:block;overflow-y:scroll;color:#000000"}= solution.solution
                        %tr
                          %td
                            %table{:border => "0",:style => "margin:10px 0px;"}
                              %tr
                                %th{:width => "150px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;"} User
                                %th{:width => "150px",:style => "border-right:1px solid;font-size:17px;color:#000000;vertical-align:middle;"}= solution.user
                                %th{:width => "150px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;"} Date
                                %th{:width => "150px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;"}= solution.created_at.strftime("%d %b %Y")
                      %wbr
                - @solutions.each do |solution|
                  - if solution.topic_id == @unsolved.id
                    - if solution.worked == 0
                      %table{:class => "table-border",:border => "1", :style => "border-collapse: collapse;height:70px;width:550px;table-layout:fixed"}
                        %tr
                          %td
                            %table{:border => "0",:style => "margin:10px 0px;"}
                              %tr
                                %th{:width => "208px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;"} Solution
                                -if session[:role] == 2
                                  %th{:width => "208px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;",:class => "delete-button"}= link_to 'Delete', solution, :method => :delete, :data => { :confirm => 'Are you sure to delete this solution?' }
                              %tr
                                %td{:class => "table-border",:colspan => "2", :width => "550px",:style => "font-size:17px;color:#000000;height:150px;text-align:left;width: 546px;word-wrap: break-word;display:block;overflow-y:scroll;color:#000000"}= solution.solution
                        %tr
                          %td
                            %table{:border => "0"}
                              %tr
                                %th{:width => "150px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;"} User
                                %th{:width => "150px",:style => "border-right:1px solid;font-size:17px;color:#000000;vertical-align:middle;text-align:middle;"}= solution.user
                                %th{:width => "150px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;"} Date
                                %th{:width => "150px",:style => "font-size:17px;color:#000000;height:50px;vertical-align:middle;"}= solution.created_at.strftime("%d %b %Y")
                      %wbr
                
                
                
                
                
                  -#  %p{:style => "font-size:15px;font-weight:bold;"}= link_to 'Edit', edit_unsolved_path(@unsolved)




-else
  %div Please Login before use this session
  %a{:href => "/"} Click Here to login



                      




                  
                               
