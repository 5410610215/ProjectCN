%div
  = @problem_id.id
%div
  = @problem_id.topic
%div
  = @problem_id.priority
%div
  = @problem_id.details
%div
  = @problem_id.department
%div
  = @problem_id.status
= form_for @solution do |f|
  - if @solution.errors.any?
    #error_explanation
      %h2= "#{pluralize(@solution.errors.count, "error")} prohibited this solution from being saved:"
      %ul
        - @solution.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :topic_id
    = f.number_field :topic_id, :value => @problem_id.id, :readonly => true
  .field
    = f.label :solution
    = f.text_area :solution
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label 'Finish ?'
    = f.select 'worked' , [['Just Recommend', 0], ['Finished Job', 1]]
  .actions
    = f.submit 'Save'
