%body{:style => "background-image:url(assets/tail-middle.jpg);background-position:center;background-repeat:no-repeat;background-attachment:fixed; "}
%center
  %p{:style => "color:#00DD00;font-size:25px;"}
    = notice
  %table{:border => "1"}
    %tr
      %th{:style => "color:#000000;font-size:25px;width:18%;height:70px"}
        %center 
          Priority
      %td{:style => "font-size:17px;;height:30px"}
        %center 
          - if @unsolved.priority == 1 
            = "LOW"
          - else
            = "HIGH"
    %tr
      %th{:style => "color:#000000;font-size:25px;width:18%;height:70px"}
        %center 
          Topic
      %td{:style => "font-size:17px;;height:30px"}
        %center 
          = @unsolved.topic
    %tr
      %th{:style => "color:#000000;font-size:25px;width:18%;height:70px"}
        %center 
          Department
      %td{:style => "font-size:17px;;height:30px"}
        %center 
          = @unsolved.department
    %tr
      %th{:style => "color:#000000;font-size:25px;width:18%;height:70px"}
        %center 
          Details
      %td{:style => "font-size:17px;;height:30px"}
        %center 
          = @unsolved.details
    %tr
      %th{:style => "color:#000000;font-size:25px;width:18%;height:70px"}
        %center 
          Status
      %td{:style => "font-size:17px;height:30px;color:#00FF33;"}
        %center 
          - if @unsolved.status == 1 
            = "SOLVED"
          - else
            = "UNSOLVED"

%table
  %tr
    %th Topic
    %th Solution
    %th User
    %th Worked
    %th Delete

  - @solutions = Solution.all
  - @solutions.each do |solution|
    - if solution.topic_id == @unsolved.id
      - if solution.worked == 1
        %tr
          %td= solution.topic_id
          %td= solution.solution
          %td= solution.user
          %td= "Finish Job"
          %td= link_to 'Destroy', solution, :method => :delete, :data => { :confirm => 'Are you sure?' }
  - @solutions.each do |solution|
    - if solution.topic_id == @unsolved.id
      - if solution.worked == 0
        %tr
          %td= solution.topic_id
          %td= solution.solution
          %td= solution.user
          %td= "Just Recommend"
          %td= link_to 'Destroy', solution, :method => :delete, :data => { :confirm => 'Are you sure?' }


  
  %a{:href => "delete/" + @unsolved.id.to_s, :data => { :confirm => 'Are you sure to delete this problem?' }} Delete     
  %p{:style => "font-size:15px;font-weight:bold;"}= link_to 'Back', solveds_path

